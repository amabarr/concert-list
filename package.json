{
  "name": "app",
  "private": true,
  "devDependencies": {
    "chokidar": "^4.0.0",
    "esbuild": "^0.23.1"
  },
  "scripts": {
    "ts-check": "tsc --project tsconfig.json --noEmit --watch --preserveWatchOutput",
    "build": "esbuild app/javascript/components/*.* --bundle --sourcemap --outdir=app/assets/builds --public-path=assets",
    "start": "yarn build --watch --servedir=app/assets/builds"
  },
  "dependencies": {
    "@hotwired/stimulus": "^3.2.2",
    "@hotwired/turbo-rails": "^8.0.10",
    "@types/react": "^18.3.8",
    "@types/react-dom": "^18.3.0",
    "react": "^18.2",
    "react-dom": "^18.3.1",
    "typescript": "^5.6.2"
  }
}
